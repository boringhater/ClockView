<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ClockView" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


        <item name="clockStyle">@style/GlobalClockStyle</item>
    </style>
    
    <style name="DefaultClockStyle">
        <item name="dialColor">@color/black</item>
        <item name="hourHandColor">@color/black</item>
        <item name="minuteHandColor">@color/black</item>
        <item name="secondHandColor">#5555dd</item>
        <item name="numbersSize">15</item>
    </style>

    <style name="GlobalClockStyle" parent="DefaultClockStyle">
        <item name="secondHandColor">#cc0000</item>
    </style>
</resources>